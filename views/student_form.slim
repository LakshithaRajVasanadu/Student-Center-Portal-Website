label for="first_name" First Name:
input#first_name type="text" name="student[first_name]" value="#{@student.first_name}"
<br><br>
label for="last_name" Last Name:
input#last_name type="text" name="student[last_name]" value="#{@student.last_name}"
<br><br>
label for="student_id" Student Id:
input#student_id type="text" name="student[student_id]" value="#{@student.student_id}"
<br><br>
label for="grade" Grade:
input#grade type="text" name="student[grade]" value="#{@student.grade}"
<br><br>
label for="sex" Sex:
input#sex type="text" name="student[sex]" value="#{@student.sex}"
<br><br>
label for="dob" DOB(mm/dd/yyyy):
input#dob type="text" name="student[dob]" value="#{@student.dob.strftime("%m/%d/%Y") if @student.dob}"
<br><br>
input type="submit" value="Save Student"
